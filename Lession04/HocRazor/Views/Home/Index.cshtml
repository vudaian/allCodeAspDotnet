<!--Cấu trúc lặp for-->
@{
    var hoa = new List<String>()
    {
        "Hồng", "Mai", "Nhài"
    };
    var j = 0;
}
@for (int i = 0; i < hoa.Count; i++)
{
    <p>Hoa @hoa[i]</p>
}

<h4>Các loài hoa</h4>
<!--Cấu trúc while-->
@while (j < hoa.Count)
{
    <p>Hoa @hoa[j]</p>  
    j++;
}

<!--Cấu trúc foreach-->
@{ 
        var student = new List<Student>() 
        {
            new Student() {StudentId = "100", StudentName = "Vu Dai An", Address = "Thai Binh"},
            new Student() {StudentId = "101", StudentName = "Nguyen Van A", Address = "Ha Noi" },
            new Student() {StudentId = "102", StudentName = "Tran Van B", Address = "Hoa Binh" },
            new Student() {StudentId = "103", StudentName = "Pham Van C", Address = "Quang Ninh" },
        };
}

<table class="table table-dark table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Ma sinh vien</th>
            <th>Ho ten</th>
            <th>Dia chi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in student)
        {
            <tr>
                <td>@a.StudentId</td>
                <td>@a.StudentName</td>
                <td>@a.Address</td>
            </tr>
        }
    </tbody>
</table>