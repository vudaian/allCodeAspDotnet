<!--Cấu trúc rẽ nhánh if...else-->

@{
    var nam = 2024;
}
@if ((nam % 4 == 0 && nam % 100 != 0) || (nam % 400 == 0))
{
    <p>@nam là năm nhuận </p>
}
else
{
    <p>@nam không phải là năm nhuận </p>
}

